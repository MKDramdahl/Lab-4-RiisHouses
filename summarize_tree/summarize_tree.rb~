#!/usr/bin/env ruby

require 'find'
dirCount=0
fileCount=0
Find.find(ARGV[0]) do |path|
  if FileTest.directory?(path)
    dirCount+=1
  elsif FileTest.file?(path)
    fileCount+=1
  end
end
sprintf("Processed all the files from <%s>.\n" ARGV[1])
sprintf("There were %d directories.\n", dirCount)
sprintf("There were %d regular files.\n", fileCount)
  
