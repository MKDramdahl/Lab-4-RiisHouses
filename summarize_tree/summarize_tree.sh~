#!/bin/bash

num_regular=0
num_dirs=0
file_find=find -type f $1
dir_find=find -type d $1
for file in file_find
do
    num_regular = num_regular + 1
done

for dir in dir_find
do
    num_dirs = num_dirs + 1
done

echo "Processed all the files from ${1}."
echo "There were ${num_dirs} directories."
echo "There were ${num_regular} files."
